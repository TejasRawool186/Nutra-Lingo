{
    "$schema": "https://lingo.dev/schema/i18n.json",
    "version": "1.10",
    "locale": {
        "source": "en",
        "targets": [
            "hi",
            "es",
            "mr",
            "ta",
            "fr",
            "de",
            "pt",
            "ja",
            "ko",
            "zh",
            "ar",
            "ru",
            "bn",
            "te",
            "kn",
            "gu",
            "it",
            "tr",
